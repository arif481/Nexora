rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can only access their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Wellness entries use document ID format: {userId}_{dateKey}
    // Allow read if document ID starts with the user's ID
    match /wellnessEntries/{docId} {
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      
      allow read: if request.auth != null && 
        docId.split('_')[0] == request.auth.uid;
      
      allow update, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Generic rule for all other collections with userId field
    // Covers: tasks, calendarEvents, notifications, habits, notes, journalEntries,
    // subjects, transactions, budgets, subscriptions,
    // aiMemories, focusBlocks, focusSessions, goals, aiConversations, linkedAccounts
    match /{collection}/{docId} {
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      
      allow read, update, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
  }
}
